<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micropulse7.cec_bulletin.LogInAct"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:label="@string/sign_in"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/upperlogin"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:layout_width="66dp"
                android:layout_height="76dp"
                app:srcCompat="@drawable/banner"
                android:id="@+id/up"
                android:layout_marginTop="-10dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/LogoImage"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-10dp"
            android:contentDescription=""
            app:srcCompat="@drawable/logo2"
            tools:ignore="ContentDescription" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText2"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:ems="10"
            android:text="Mobile"
            android:textAlignment="viewEnd"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:ems="10"
            android:text="Bulletin"
            android:textColor="#fa9115"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_acc_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/LogoImage"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:text="Log in"
            android:textColor="@color/buttonTextColor"
            android:textIsSelectable="false"

            android:textSize="25sp" />

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/nav_acc_type"
            android:layout_marginTop="25dp"
            android:background="@drawable/input_outline"
            android:drawableEnd="@mipmap/ic_person_gray_24dp"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/ic_person_gray_24dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:text="clark@gmail.com" />

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/emailField"
            android:background="@drawable/input_outline"
            android:drawableEnd="@mipmap/ic_lock_gray_24dp"
            android:drawableRight="@mipmap/ic_lock_gray_24dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:text="password" />

        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:padding="10dp"
            android:textColor="@color/errorColor" />

        <Button
            android:id="@+id/LoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/error_message"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonlogin"
            android:text="@string/login"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/registerhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:text="@string/need_new_account_click_here" />
    </LinearLayout>


</LinearLayout>
