<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="350dp">


    <TextView
        android:id="@+id/custom_dialog_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="CRISTAL e-COLLEGE"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Online Bulletin"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="This application enables students to access information regarding the school's events and other information the students needed the most. It provides students the easiest and fastest way of having their suggestions, and questions about the school. It serves as an online community for the CEC's students and its employees."
        android:textColor="#bc3d3d3d"
        android:textSize="18sp"
        android:paddingTop="10dp" />


    <Button
        android:id="@+id/custom_dialog_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Done"
        android:textColor="#fff"
        android:textSize="15sp" />



</LinearLayout>