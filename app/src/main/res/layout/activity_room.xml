<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.micropulse7.cec_bulletin.Room"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Room"
        android:hint="Room name "
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/RoomPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/Room"
        android:layout_alignStart="@+id/Room"
        android:layout_below="@+id/Room"
        android:layout_weight="0.06"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/Room"
        android:layout_alignLeft="@+id/Room"
        android:layout_alignStart="@+id/Room"
        android:id="@+id/RoomDescription"
        android:hint="Description of the Room"
        android:layout_height="50dp" />

    <Button
        android:text="Create "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Croom" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
