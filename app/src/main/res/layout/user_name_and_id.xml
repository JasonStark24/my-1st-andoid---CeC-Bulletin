<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_fines_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:text="add fines" />

        <TextView
            android:id="@+id/stud_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stud_list_id"
            android:layout_toLeftOf="@id/add_fines_btn"
            android:layout_toStartOf="@+id/add_fines_btn"
            android:padding="5dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/stud_list_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/add_fines_btn"
            android:layout_toStartOf="@+id/add_fines_btn"
            android:padding="5dp"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>